#:set screens ['Sequence', 'Time Settings', 'Timer', 'Imagery']

GridLayout:
    rows: 2
    cols: 1
    # -------------------------------------------Action Bar
    ActionBar:
        id: action_bar
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                #app_icon: 'images/ic_launcher3.png'
                title: 'Mentor'
                with_previous: False
            ActionButton:
                text: screens[page_layout.page]
            ActionGroup:
                mode: 'spinner'
                text: 'pages'
                ActionButton:
                    text: screens[0]
                    on_press: page_layout.page = 0
                ActionButton:
                    text: screens[1]
                    on_press: page_layout.page = 1
                ActionButton:
                    text: screens[2]
                    on_press: page_layout.page = 2
                ActionButton:
                    text: screens[3]
                    on_press: page_layout.page = 3
    # ------------------------------------ sequenceselector
    PageLayout:
        id: page_layout
        #border: '20dp'
        page: 1
        FloatLayout:
            id: 'sequenceselector'
            ScrollView:
                do_scroll_x: False
                pos_hint: {'center_x': .5, 'center_y': .5}
                GridLayout:
                    id: grid_main
                    #size_hint_y: None  # 5
                    #size_hint: (None, None)
                    #rows:4
                    cols:2
                    #spacing: 2
                    #row_force_default: 50

        # -------------------------------------------- HOME
        FloatLayout:
            id: 'home'
            canvas:
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint: 1.0, .1
                pos_hint: {'x': .0, 'y': .9}
                font_size: '30dp'
                text: 'Settings'
            Spinner:
                id: 'type'
                text: "AMRAP"
                values: 'AMRAP', 'RFT (w CAP Time)', 'EMOM'
                pos_hint: {'x': .1, 'y': .0}
                size_hint: .2, .1
            TextInput:
                id: 'minutes'
                text: '30'
                font_size: '80dp'
                background_color: (0,0,0,1)
                foreground_color: (1.0,1.0,1.0,1.0)
                font_color: (0,0,0,0)
                input_filter: 'int'
                pos_hint: {'x': .2, 'y': .7}
                size_hint: .2, .2
            Label:
                size_hint: .1, .1
                pos_hint: {'x': .35, 'y': .8}
                font_size: '30dp'
                text: '\''
            TextInput:
                id: 'seconds'
                text: '00'
                font_size: '80dp'
                background_color: (0,0,0,1)
                foreground_color: (1.0,1.0,1.0,1.0)
                font_color: (0,0,0,0)
                input_filter: 'int'
                pos_hint: {'x': .5, 'y': .7}
                size_hint: .2, .2
            Label:
                size_hint: .1, .1
                pos_hint: {'x': .65, 'y': .8}
                font_size: '30dp'
                text: '\'\''
            TextInput:
                id: 'exercises'
                text: '05'
                font_size: '80dp'
                background_color: (0,0,0,1)
                foreground_color: (1.0,1.0,1.0,1.0)
                font_color: (0,0,0,0)
                input_filter: 'int'
                pos_hint: {'x': .2, 'y': .5}
                size_hint: .2, .2
            Label:
                size_hint: .1, .1
                pos_hint: {'x': .3, 'y': .45}
                font_size: '30dp'
                text: 'exercises'
            TextInput:
                id: 'times'
                text: '01'
                font_size: '80dp'
                background_color: (0,0,0,1)
                foreground_color: (1.0,1.0,1.0,1.0)
                font_color: (0,0,0,0)
                input_filter: 'int'
                pos_hint: {'x': .5, 'y': .5}
                size_hint: .2, .2
            Label:
                size_hint: .1, .1
                pos_hint: {'x': .6, 'y': .45}
                font_size: '30dp'
                text: 'repetitions'
            Label:
                size_hint: 1.0, .1
                pos_hint: {'x': .0, 'y': .9}
                font_size: '30dp'
                text: 'Settings'
            Button:
                id: start
                text: "Start"
                group: 'Commands'
                font_size: '50dp'
                background_color: (0.1,0.1,0.1,1)
                #foreground_color: (1.0,1.0,1.0,1.0)
                pos_hint: {'x': .4, 'y': .0}
                size_hint: .3, .2
                on_press:
                    page_layout.page = 1
                    stop.state = 'down'
                    start.active = False
                    stop.active = True
            Button:
                id: stop
                text: "Stop"
                group: 'Commands'
                font_size: '50dp'
                background_color: (0.1,0.1,0.1,1)
                #foreground_color: (1.0,1.0,1.0,1.0)
                pos_hint: {'x': .7, 'y': .0}
                size_hint: .3, .2
                #state: pressed
                on_press:
                    start.state = 'down'
                    stop.active = False
                    start.active = True
        # ------------------------------------------- TIMER
        FloatLayout:
            canvas:
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint: 1.0, .1
                pos_hint: {'x': .0, 'y': .9}
                font_size: '30dp'
                text: 'Second Layout'
        # ------------------------------------------ PHOTOS
        FloatLayout:
            canvas:
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint: 1.0, .1
                pos_hint: {'x': .0, 'y': .9}
                font_size: '30dp'
                text: 'third Layout'
